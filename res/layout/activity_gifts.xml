<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gifts_fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

        <Button
            android:id="@+id/btn_my_gifts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/my_gifts" 
            style = "@style/customBtnColor"/>

        <Button
            android:id="@+id/btn_public_gifts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/public_gifts" 
            style = "@style/customBtnColor"/>

        <Button
            android:id="@+id/btn_add_gift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/add_gift"
            style = "@style/customBtnColor" />

        
        </LinearLayout>

</FrameLayout>
